                  "key": "token",
                  "value": "{{accessToken_teacher}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"ما هي عاصمة ألمانيا؟\",\n  \"qType\": \"mcq\",\n  \"level\": \"A1\",\n  \"provider\": \"DTZ\",\n  \"section\": \"General\",\n  \"difficulty\": \"easy\",\n  \"options\": [\n    {\"text\": \"برلين\", \"isCorrect\": true},\n    {\"text\": \"ميونخ\", \"isCorrect\": false},\n    {\"text\": \"هامبورغ\", \"isCorrect\": false}\n  ],\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/questions",
              "host": ["{{baseUrl}}"],
              "path": ["questions"]
            }
          }
        },
        {
          "name": "Get Questions",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken_teacher}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/questions?level=A1&status=published&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["questions"],
              "query": [
                {
                  "key": "level",
                  "value": "A1"
                },
                {
                  "key": "status",
                  "value": "published"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
